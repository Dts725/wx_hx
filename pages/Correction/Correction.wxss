.translation-01 {
  top: 0;
  opacity: 1;
  transition: all 500ms ease-in-out 0s;
}

.translation-02 {
  top: 0;
  opacity: 1;
  transition: all 500ms ease-in-out 0.1s;
}

.translation-03 {
  top: 0;
