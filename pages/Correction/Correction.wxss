/* pages/Correction/Correction.wxss */

.ipt {
  padding: 2px 20px;
  border: 1px solid #ccc;
  border-radius: 2rem;
}

.search {
  padding: 1px 5px;
  border-radius: 5px;
  border: 1px solid #ccc;
  margin-left: 2rem;
}

.tip {
  margin-top: 1rem;
}

.table {
  margin: 2rem 1rem 0 1rem;
  padding: 5px 1rem;
  border-bottom: 1px solid #cecece;
}

.table-item {
  margin: 2rem 1rem 0 1rem;
  padding: 5px 1rem;
}

.selected {
  font-weight: 700;
  color: #1d8aff;
}

.item-img1 {
  clip-path: polygon(0% 0, 20% 0%, 20% 100%, 0% 100%);
  position: absolute;
  top: 100%;
  left: 0;
  opacity: 0;
}

