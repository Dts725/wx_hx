/* pages/index/guide.wxss */
.index-guide view{
   color: #333 
}
.index-guide__header{
  width: calc(100% - 8vw);
  margin: 4vw auto;
  border-radius: 1vw;
  overflow: hidden;
  position: relative;
}
.index-guide__header-text{
   position: absolute;
   top: 0;
   width: 100%;
   height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
 
}
.index-guide__header-text text{
   color: #fff;
   font-size: 4.5vw;
   font-weight: bold
}
.index-guide__header image{
  display: block;
  width: 100%;
}
.index-guide__content{
   margin: 4vw auto;
   font-size: 3vw;
   margin-bottom:120rpx;

}
.index-guide__content-item:not(:nth-last-child(1)){
  margin-bottom: 4vw;
}
.index-guide__content-item-title{
   width: 100%;
   margin: auto;
   height: 50rpx;
   text-align: center;
}
.index-guide__content-item-line{
  display: table;
  width: 100%;
  line-height: 50rpx;
  white-space: nowrap;
  border-spacing: 4vw 0;
  color: #1d8aff;
  font-size: 4vw;
  font-weight: bold
}
.index-guide__content-item-line::before, .index-guide__content-item-line::after {
    display: table-cell;
    content: '';
    width: 50%;
    background: linear-gradient(#eee, #eee) repeat-x left center;
    background-size: 0.1rem 0.1rem;

}
.index-guide__content-item-container{
  width: calc(100% - 8vw);
  margin: -25rpx auto 0 auto;
  border: 1px solid #eee;
  padding-top: 25rpx;
  border-top: none;
  box-sizing: border-box;
  position: relative
}
.index-guide__content-item-content{
  width: calc(100% - 4vw);
  margin: auto;
  padding: 2vw 0;
 
}
.index-guide__number{
  position: absolute;
  bottom:-5vw;
  right: 4vw;
  font-size: 12vw;
  font-family: serif
}







