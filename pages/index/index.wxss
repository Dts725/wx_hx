/* index.wxss */

.body {
  background-color: #f3f3f3;
}

.ready {
  width: 100%;
  padding: 1rem 0;
}

.img {
  width: 42px;
  height: 42px;
}

.margin-bottom {
  margin-bottom: 0.5rem;
}

.flex-center-warp, .flex-center-evenly {
  padding: 0 0 0.5rem 0;
}

.flex-center-column {
  background-color: #fff;
}

.flex-center-column text {
  font-size: 30rpx;
}

.impress {
  margin: 0 2vw 4vw 2vw;
}

.fz12 {
  font-size: 12px;
}
.btn {
  margin-top: 2rem;
}

.btn image {
  height: 185rpx;
}
.bt-image {
  height: 210rpx;
}

.user-img {
  height: 120rpx;
  width: 120rpx;
  border-radius: 100%;
  position: absolute;
  top: 14rpx;
  left: 39rpx;
  box-shadow: 0 15rpx 20rpx -5px #000;

}
.wechat {
  width: 100%;
  height: 55px;
}

.wechat>contact-button {
  opacity: 0;
}

.prepare-item {
  width: calc((100% - 8vw) / 3);
}

.online-banner {
  width: calc(100% - 0.5rem);
  margin: 4vw auto 0 auto;
}

.flex-center-evenly {
  /* justify-content: space-around; */
  flex-wrap: wrap;
}

.center {
  background-color: #fff;
  color: #999;
  padding: 0.5em 1em;
  border-radius:100rem; 
  position: absolute;
  top: 40rpx;
  right: 120rpx;
  
}

.footer {
  position: absolute;
  bottom: 50rpx;
}
