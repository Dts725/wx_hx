.wechat {
  width: 100%;
  height: 55px;
}

.wechat>contact-button {
  opacity: 0;
}

.prepare-item {
  width: calc((100% - 8vw) / 3)
}

.online-banner {
  width: calc(100% - 0.5rem);
  margin: 4vw auto 0 auto;
}

.flex-center-evenly {
  justify-content: space-around;
}