.scroll_view{
  margin-top: 52px; 
  height: calc(100vh - 52px)
}
.video_scroll{
  height: 95%;
}
.video_list_contain{
  width:100%;
  min-height:2rem;
  background-color:#fff;
  /* margin-bottom:10px; */
  padding:10px;
  word-break:break-all;
  overflow:auto;
  box-sizing: border-box;
}
.video_collect{
  height: 25px;
  width: 25px;
  position: absolute;
  right: 10px;
}
.video_image{
  width:30%;
  height:110px;
}
.video_contain{
  float:right;
  width:65%;
  font-size:14px;
  margin-top:0.05rem;
}
.video_title{
  text-align:left;
  width:70%;
  font-size:18px;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
}
.video_time{
  text-align:left;
  width:50%;
  float:left;
  color:#999;
}
.video_content{
  text-align:left;
  color:#666;
  font-size:14px;
  margin-top:25px;
  line-height:1.2rem;
  width:95%;
  text-overflow:-o-ellipsis-lastline;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  position: relative;
}
.video_collect{
  height: 25px;
  width: 25px;
  position: absolute;
  right: 10px;
}