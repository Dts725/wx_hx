/* pages/components/panelList/panelList.wxss */

/* 总体设置  */
.bg{
  height: 100%;
  margin-top:15rpx;
box-sizing: border-box;
}
.card {
  width: 100%;
  height:220rpx;
  background-color: white;
  /* margin: 10px 0; */
  margin-bottom: 20rpx;
}

/* 中间内容面板  */

.card .c-panel {
  box-sizing: border-box;
  /* padding: 0 0.5rem 0.5rem; */
}
.card .c-row{
	display: flex;
	justify-content: space-between;
	align-items: center;
	box-sizing: border-box;
	padding:30rpx 25rpx;

}

 /* 左侧内容 */
 .c-body-left{
	 flex:4;
	 padding-right:040rpx;
 }
 .c-panel-title {
   text-align:justify;

   overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-line-clamp: 2;
   -webkit-box-orient: vertical;
   color: black;
   font-size:36rpx;

   /* font-weight: bold; */
 }
  /* 灰色字体 */
 .c-info-gray {
   font-size: 0.9rem;
   color: #666;
   margin-top: 0.2rem;
   /* display: flex;
   justify-content: space-between; */
 }
 
