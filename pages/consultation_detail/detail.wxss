/* pages/consultation_detail/detail.wxss */

.consultation-detail {
  box-sizing: border-box;
  padding: 2vw;
  min-height: 100%;
  font-size: 4vw;
}

.detail-header {
  position: relative;
  color: #fff;
  font-size: 5vw;
  width: 100%;
  height: 15vw;
  justify-content: center;
}

.bg-image {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}

/******************* 面板 *******************/

.d-panel {
  box-sizing: border-box;
  box-shadow: 0 0 10px #aaa;
  width: 96%;
  margin: 2vw auto;
  padding: 3vw;
  border-radius: 1.5vw;
}

.d-panel-header {
  font-size: 4.5vw;
  border-bottom: 1px solid #ccc;
  padding: 0 0 2vw 0;
  font-weight: 500;
}

.icon {
  width: 4.5vw !important;
  height: 4.5vw !important;
  margin-right: 1.5vw;
}

.d-panel-body-li {
  border-bottom: 1px dashed #ddd;
  line-height: 9vw;
  height: 9vw;
  color: #666;
}

.d-panel-body-li:last-child {
  border: none;
}