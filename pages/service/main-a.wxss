/* pages/service/main-a.wxss */
.main-common{
 width: 100%;
 height: 100vh;

}
.main-header{
  width: 100%;
  height: 40vh;
  position: relative
}
.main-photo{
  width: 100%;
  height: 100%;
 }
 .main-photo image{
   width: 100%;
   height: 100%;
   display: block;
   object-fit: cover;
   object-position: center;
 }
 .main-nav{
   width: 100%;
   height: 8vh;
   background: #fff;
   position: absolute;
   bottom: -4vh;
   left: 0;
   border-top-left-radius: 5.33vw;
   border-top-right-radius: 5.33vw;
   
  
 }
 .main-nav-container{
   width: 95%;
   margin: auto;
   height: 100%;
   display: flex;
   justify-content: space-around;
   align-items: center;
   border-bottom: 1px solid #F2F2F2;
 }
 .main-nav-item{
    display: flex;
    align-items: center;
    height: 100%;
    
 }
 .main-nav-item-active{
     border-bottom: 0.8vw solid #1B8AFE;
     font-weight: bold;
 }
 .main-content{
   padding: 2vw 0;
   width: 95%;
   margin: 4vh auto 0 auto;
 }
 .main-content-tabs{
   width: 100%;
   display: flex;
   align-items: center;
   flex-wrap: wrap;
 }
 .main-content-tabs-item{
   width: calc(100% / 4);
   display: flex;
   flex-direction: column;
   align-items: center;
   font-size: 3.73vw;
   margin: 4vw 0;
 }
.main-content-tabs-item image{
  display: block;
  width: 8vw;
  height: 8vw;
}
.main-content-intro{
  width: 95%;
  margin: auto;
  border-top: 5px solid #F2F2F2;
  padding: 4vw 0;
}
.main-content-intro-des{
   font-size: 3.2vw;
}
.main-content-intro-detail{
  padding-top: 4vw;
}
.main-content-intro-detail-title{
    font-weight: bold;
    font-size: 4vw;
}
.main-content-intro-detail-content{
  margin-top: 2vw;
  font-size: 3.2vw;
}