/* pages/bid/bid.wxss */
.warp {
  padding: 1rem 0.5rem;

}
.turn-link {
  width: 2rem;
  height: 2rem;
  top: 92%;
  left: 90%;
}
.tips {
  padding: 1.5rem 0 0.5rem 0;
  color: #333
  }
  .content {
    height: 6rem;
    width: 100%;
    border: 1px dashed #ccc;
    border-radius: 5px;
  }

  .btn {
    margin-top: 2rem;
    background-color: #1d8aff;
    width: 70%;
    border-radius: 20rem;
  }
.module {
  height: 6rem;
    width: 100%;
    border: 1px dashed #ccc;
    border-radius: 5px;
  background-color  :rgba(204,204,204,0.8);
  /* opacity: 0.6; */

}

.img {
  height: 35px;
  width: 35px;
  padding: 0 0.5rem;
}
.warp-header{
  width: 100%;
  position: relative;
}
.warp-header image{
  height: 100%;
  display: block;
}
.warp-header-text{
   position: absolute;
   top: 0;
   bottom: 0;
   width: 100%;
   height: 100%;
   display: flex;
   justify-content: center;
   align-items: center;
   background: rgba(188, 186, 252, 0.5)
 }
 .warp-header-text text{
   color: #fff;
   font-size: 4.5vw;
   font-weight: bold
}
.warp-input{
  width: 90%;
  height: 6vh;
  line-height: 6vh;
  padding-left: 4vw;
  background: #BCBAFC;
  border: 1px solid #BBB9FB;
  border-radius: 5vw;
  position: relative;
}
view.picker{
  color: #fff;
  font-size: 3.5vw
}
.warp-input::after {
    display: inline-block;
    content: " ";
    height: 18rpx;
    width: 18rpx;
    border-width: 0 2rpx 2rpx 0;
    border-color: #fff;
    border-style: solid;
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform-origin: center;
    transition: transform .3s;
    position: absolute;
    top: 50%;
    right: 50rpx;
    margin-top: -10rpx;
}
