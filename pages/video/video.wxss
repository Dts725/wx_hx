.dialog{
  position:absolute;
  width:100%;
  height:100%;
  top:0;
  z-index:9999;
  /* background:rgba(0,0,0,0.5); */
}
.dialog .dialog-contain{
  padding-bottom: 10px;
  box-sizing: border-box;
  border-radius: 10px;
  width: 80%;
  height: 35%;
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,20%);
  overflow: hidden;
  box-shadow:0px 0px 20px #2334a8;
}
.dialog .dialog-contain .dialog-title{
  height: 15%;
  color: #fff;
  padding-left: 10px;
  padding-top: 5px;
  background: #51A0FF;
  box-sizing: border-box;
}
.dialog-html{
  padding: 0 5px 10px 5px;
  height: 90%;
  width: 100%;
  overflow-x: hidden;
  overflow-y: auto;
  box-sizing: border-box;
}
.dialog .dialog-close{
  position: absolute;
  top: 56vh;
  right: 8vw;
  height: 24px;
  width: 24px;
  color: #fff;
  background: #f56c6c;
  text-align: center;
  line-height: 24px;
  border-radius: 50%;
  z-index: 99999;
}
