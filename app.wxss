 .flex-center-between {
   display: flex;
   justify-content: space-between;
   align-content: center;
   align-items: center;
 }

 .flex-center-column {
   display: flex;
   flex-flow: column wrap;
   justify-content: center;
   align-items: center;
 }

 .flex-between-column {
   display: flex;
   flex-flow: column wrap;
   justify-content: space-between;
   align-items: center;
